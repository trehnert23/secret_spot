<body class="show_body">
  <div class="header">
    <div class="container">
      <img src="http://papagayosports.com/wp-content/uploads/2015/11/surf-icon-small.png"> Secret Spots
    </div>
  </div>

  <div class="tag">
    <div class="container">
    <hr>
    <hr>

      <div class="cards row">
        <% @destinations.order("name").each do |d| %>
        <div class="card col-xs-4">
          <%= image_tag d.image %>
          <h2><%= d.name %></h2>
          <p><%= link_to "Read more", destination_path(d) %></p>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</body>