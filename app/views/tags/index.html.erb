<div class="row header">
  <div class="col-lg-1"></div>
  <div class="col-lg-1">
    <img src="http://papagayosports.com/wp-content/uploads/2015/11/surf-icon-small.png">
  </div>
  <div class="col-lg-6">
    <h1>Secret Spot Reviews</h1>
  </div>
</div>

<div class="tags">
  <div class="container">
    <div class="cards row">
    	<% @tags.each do |t| %>
      <div class="card col-xs-4">
        <%= image_tag t.image %>
        <h2><%= t.title %></h2>
        <%= link_to "Learn more", tag_path(t) %>
      </div>
      <% end %>
    </div>
  </div>
</div>